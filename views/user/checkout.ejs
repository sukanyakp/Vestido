async function removeCoupon(code) {
    try {
        const response = await fetch('/apply-coupon', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ couponCode: code }),
        });

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }
        const data = await response.json();
        console.log(data, "removeCoupon");

        if (data.success) {
            showSnackBar(data.message);
            console.log(`Coupon ${code} removed`);

            // Update the total cart price in the DOM
            updateTotalCartPrice(data.totalCartPrice,data.discountAmount);

            // Update the individual item prices and total for each item
            updateItemPrices(data.items);

