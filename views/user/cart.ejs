										<tr   id="item-row-<%=item._id %>" >                                 
											<td class="product-col">
												<div class="product">
													<figure class="product-media">
														<a href="#">
															<img src="<%=item.variantDetails.images[1] %>  " alt="Product image"> <!--v.images[0]-->
														</a>
													</figure>

													<h3 class="product-title">
														<a href="#"><%=item.variantDetails.productDetails.productName  %> <br> </a>                     <!--v.products[0].productName-->
                                                        
													</h3><!-- End .product-title -->
                                                   
												</div><!-- End .product -->
                                             <a href=""> Size :<%=item.size %> </a>   
											</td>
                                            <% if (item.offerApplied) { %>
                                                <td class="price-col">₹<%=item.bestOfferPrice %></td>  
                                                <% }else{%>
                                                    <td class="price-col">₹<%=item.price %></td>
                                                    <%} %>
										           <!--v.price-->


                                            <td class="quantity-col">
                                                <div class="cart-product-quantity">
                                                    <button onclick="decrementQuantity('<%=item.variantId %>', '<%=item._id %>','<%=item.size %>')" id="decrement" class="quantity-btn">
                                                        <span class="material-symbols-outlined"> - </span>
                                                    </button>
                                                    <input type="text" id="quantity<%= item._id %>" class=" quantity-input" value=" <%= item.quantity %>" min="1" max="4" step="1" data-decimals="0" readonly required>
                                                    <button onclick="incrementQuantity('<%=item.variantId %>', '<%=item._id %>', '<%=item.size %>')" id="increment" class="quantity-btn">
                                                        <span class="material-symbols-outlined"> + </span>
                                                    </button>
                                                </div>
                                                <p id="max<%= item._id %>" style="color: red; display: none;">Reached the maximum quantity</p>
                                                <p id="min<%= item._id %>" style="color: red; display: none;">Reached the minimum quantity</p>
                                                <p id="error<%= item._id %>"  style=" color: red; " ></p>
                                            </td>
                                           
                                            <td   id="stock_quantity<%= item._id %>" value=" <%= item.variantDetails.stock[0].quantity %>"   hidden></td>
                                            
                                            <% if (item.offerApplied) { %>
                                                              
											<td class="total-col"  id="total-col-<%=item._id %>">₹<%= (item.quantity * item.bestOfferPrice).toFixed(2) %></td>
                                                <% }else{%>

											<td class="total-col"  id="total-col-<%=item._id %>">₹<%= (item.quantity * item.price).toFixed(2) %></td>
                                            <%} %>
                                            
											<td class="remove-col">
                                                <button class="btn-remove" onclick="confirmRemoveItem('<%=item.variantId %>', '<%=item._id %>')">
                                                  <i class="icon-close"></i>
                                                </button>
                                              </td>
                                              
										</tr>
                                        <%})  %>
                                      
