async function removeItem(variantId, cartId) {
    try {
        const response = await fetch('/remove-item', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                id: variantId,
                cartId: cartId
            })
        });
        if (response.ok) {
            const data = await response.json();
            console.log(data, "item removed");

            // Remove the item row from the DOM
            const itemRow = document.querySelector(`#item-row-${cartId}`);
            itemRow.remove();

            // Update the total cart price in the DOM
            const totalCartPriceCol = document.querySelector('#total-cart-price');
            totalCartPriceCol.textContent = `$${data.totalCartPrice.toFixed(2)}`;
        } else {
            console.error('Failed to remove item');
        }
    } catch (error) {
        console.error('Error:', error);
    }
}


