<script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>

<script>
  function restoreBrand(brandId){
 
    let row = document.getElementById(brandId)
    row.addEventListener('click',(e)=>{
      Swal.fire({
          title: "Restore this brand ?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, Restore it"
        }).then((result) => {
          if (result.isConfirmed) {
            Swal.fire({
              title: "Restored!",
              text: "Your can change this",
              icon: "success"
            });
            axios.post(`/admin/products/restorebrand/?brandId=${brandId}`).then((response) => {
              if (response.status == 200) {
                  const row = document.getElementById(brandId);
                  if (row) {
                      row.parentNode.removeChild(row); 
                  }
              }
          });
          
          }
        });
    })
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.getElementById('logout-link').addEventListener('click', function(event) {
    event.preventDefault();
    Swal.fire({
        title: 'Do you want to logout?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, logout',
        cancelButtonText: 'No, stay logged in'
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = '/admin/logout';
        }
    });
});
</script>
