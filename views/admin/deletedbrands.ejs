                <tr id="<%=brand._id%>">
                  <td class="border-bottom-0">
                    <p class="mb-0 fw-semibold"><%=brand.brandname%></p>
                  </td>
                  <td class="border-bottom-0">
                    <button onclick="restoreBrand('<%=brand._id%>')" class="badge bg-primary rounded-3 fw-semibold">Restore</button>
