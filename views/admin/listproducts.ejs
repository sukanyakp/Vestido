<div class="col-lg-8 d-flex align-items-stretch main">
  <div class="card w-100">
    <div class="card-body p-4 ">
      <div class="button w-100 d-flex  justify-content-end">
        <a style="margin-right: 10px; width: 200px;" href="/admin/products/addproducts" class="btn btn-primary">Add Products</a>
        <a style="width: 200px;" href="/admin/products/unlistedproducts" class="btn btn-danger">Removed Products</a>
    </div>
      <h5 class="card-title fw-semibold mb-4" id="table">Products list</h5>
      <div class="table-responsive">
        <table class="table text-nowrap mb-0 align-middle">
          <thead class="text-dark fs-4">
            <tr>
             
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Image</h6>
              </th>
              <th class="border-bottom-0">
