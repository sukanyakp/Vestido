<script>
  function unlistProduct(pId){
 
    let row = document.getElementById(pId)
    row.addEventListener('click',(e)=>{
      Swal.fire({
          title: "You want to unlist this product?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "unlist this product"
        }).then((result) => {
          if (result.isConfirmed) {
            Swal.fire({
              title: "unlisted!",
              text: "Your can change this",
              icon: "success"
            });
            axios.post(`/admin/products/unlistproduct/?pId=${pId}`).then((response) => {
              if (response.status == 200) {
                  const row = document.getElementById(pId);
                  if (row) {
                      row.parentNode.removeChild(row); 
                  }
              }
          });
          
          }
        });
    })
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.getElementById('logout-link').addEventListener('click', function(event) {
    event.preventDefault();
    Swal.fire({
        title: 'Do you want to logout?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, logout',
        cancelButtonText: 'No, stay logged in'
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = '/admin/logout';
        }
    });
});
</script>


