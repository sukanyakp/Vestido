  <link rel="stylesheet" href="/admin//assets/css/styles.min.css" />
<!--  Body Wrapper -->
<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
  data-sidebar-position="fixed" data-header-position="fixed">
  <!-- Sidebar Start -->
 
  <!--  Sidebar End -->
  <!--  Main wrapper -->

  







   
<!-- table -->

<div class="col-lg-8 d-flex align-items-stretch main">
  <div class="card w-100">
    <div class="card-body p-4 ">
      <div class="button w-100 d-flex  justify-content-end">
        <!-- <a style="margin-right: 10px; width: 200px;" href="/admin/products/addcolors" class="btn btn-primary">Add Colors</a> -->
        <!-- <a style="width: 200px;" href="/admin/products/deletedcolors" class="btn btn-danger">Deleted Colors</a> -->
    </div>
      <h5 class="card-title fw-semibold mb-4" id="table">About Customer :</h5>

      <!--  orderedItem.name -->
        <!-- orderedItem.phone -->
      <div class="table-responsive" id="table">
        <table id="p-table" class="table text-nowrap mb-0 align-middle table-bordered" style="border:1px solid black; text-align:center">
          <thead class="text-dark fs-4">
            <tr>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Image</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Product Name</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Price</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Offer</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Last Price</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Qty</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Total Price</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Discount Amount</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Last Total</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Payment Status</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Order Status</h6>
              </th>
              <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Actions</h6>
              </th>
            </tr>
          </thead>
          <tbody id="tbody">
            <% if (orders) { %>
              <% orders.forEach(order => { %>
                <% order.orderedItems.forEach(orderedItem => { %>
                  <tr id=" ">
                    <td class="border-bottom-0"><img src="<%= orderedItem.images[0] %>"   width="180" height="180" alt=""></td> <!-- orderedItem.images[0]-->
                    <td class="border-bottom-0"><%= orderedItem.productName %></td>
                    <td class="border-bottom-0"><%= orderedItem.variantDetails.price %></td>
               
                    
                    <% if( orderedItem.productDetails.offerApplied) { %>
                      <td class="border-bottom-0"><%= orderedItem.productDetails.offer%>%</td>
                      <td class="border-bottom-0"><%= orderedItem.productDetails.offerPrice%></td>

                      <td class="border-bottom-0"><%= orderedItem.quantity %></td>
                       <td class="border-bottom-0"><%= (orderedItem.productDetails.offerPrice) * (orderedItem.quantity) %> </td>
                       <% if( order.couponApplied ){%>
                        <td class="border-bottom-0"><%=((orderedItem.productDetails.offerPrice)  - (orderedItem.price)) *( orderedItem.quantity )  %> </td>
                        <td class="border-bottom-0"><%= (orderedItem.price) *  (orderedItem.quantity)  %></td> 
                        <% }else{%>
                          <td class="border-bottom-0"><%= (orderedItem.productDetails.offerPrice)  - (orderedItem.price) %> </td>
                          <td class="border-bottom-0"><%= (orderedItem.price) *  (orderedItem.quantity) %></td> 
                          <%} %>
                     

                       <%} else{%>
                        <td class="border-bottom-0"><%= 0 %>%</td>
                        <td class="border-bottom-0"><%= orderedItem.variantDetails.price %></td>
                        <td class="border-bottom-0"><%= orderedItem.quantity %></td>
                        <td class="border-bottom-0"><%= (orderedItem.variantDetails.price) * (orderedItem.quantity) %></td>
                       <% if( order.couponApplied ){%>
                        <td class="border-bottom-0"><%= ((orderedItem.variantDetails.price) * (orderedItem.quantity)) - (orderedItem.totalAmount)  %></td>  <!-- this One-->
                        <td class="border-bottom-0"><%= (orderedItem.totalAmount) %></td> 
                        <% }else{%>              
                        <!-- Discount amount --> 
                        <td class="border-bottom-0"><%= 0  %></td>
                        <!--  LastTotal --> 
                       <td class="border-bottom-0"><%= (orderedItem.totalAmount)  %></td> 
                        <%  } %>             
                       <% }%>
                  
                    <td class="border-bottom-0"><%= orderedItem.paymentStatus%></td>
                    <td class="border-bottom-0"><%= orderedItem.orderStatus%></td>
                   
                   
                   
                    <td class="border-bottom-0">
                      <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton<%= orderedItem._id %>" data-bs-toggle="dropdown" aria-expanded="false">
                          Actions
                        </button>
                        <% if( orderedItem.orderStatus !== 'Canceled' && orderedItem.orderStatus !== 'Delivered'  && orderedItem.orderStatus !== 'Returned'){%>
                          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= orderedItem._id %>">
                            <li><a class="dropdown-item" href="#" onclick="updateOrderStatus('<%= orderedItem._id %>', 'Shipped')">Shipped</a></li>
                            <li><a class="dropdown-item" href="#" onclick="updateOrderStatus('<%= orderedItem._id %>', 'Delivered')">Delivered</a></li>
                          </ul>
                          <% if(orderedItem.orderStatus === 'Shipped' ){%>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= orderedItem._id %>">
                              <li><a class="dropdown-item" href="#" onclick="updateOrderStatus('<%= orderedItem._id %>', 'Delivered')">Delivered</a></li>
                            </ul>
                            <% } %>

                          <% } %>
                       
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% }) %>
            <% } %>
      
          </tbody>
        </table>
      </div>
<br>

      <div class="pagination-container"> 
        <ul class="pagination">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="/admin/products?page=<%=currentPage - 1 %>&limit=<%= limit %>">Previous</a>
                </li>
            <% } else { %>
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
            <% } %>
            
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="/admin/products?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                </li>
            <% } %>
            
            <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="/admin/products?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
                </li>
            <% } else { %>
                <li class="page-item disabled">
                    <a class="page-link" href="#">Next</a>
                </li>
            <% } %>
        </ul>
      </div><!-- End .pagination-container -->

    </div>
  </div>
