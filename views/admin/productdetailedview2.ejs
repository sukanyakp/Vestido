  <script>
    function unlistProduct(vId){
 
 let row = document.getElementById(vId)
 row.addEventListener('click',(e)=>{
   Swal.fire({
       title: "You want to unlist this product?",
       icon: "warning",
       showCancelButton: true,
       confirmButtonColor: "#3085d6",
       cancelButtonColor: "#d33",
       confirmButtonText: "unlist this product"
     }).then((result) => {
       if (result.isConfirmed) {
         Swal.fire({
           title: "unlisted!",
           text: "Your can change this",
           icon: "success"
         });
         axios.post(`/admin/products/unlistproduct/?vId=${vId}`).then((response) => {
           if (response.status == 200) {
               const row = document.getElementById(vId);
               if (row) {
                   row.parentNode.removeChild(row); 
               }
           }
       });
       
       }
     });
 })
}
  </script>
  
