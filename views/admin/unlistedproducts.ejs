<script>
  function restoreProduct(pId){
 
    let row = document.getElementById(pId)
    row.addEventListener('click',(e)=>{
      Swal.fire({
          title: "You want to restore this product?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "yes,restore this product"
        }).then((result) => {
          if (result.isConfirmed) {
            Swal.fire({
              title: "restored!",
              text: "Your can change this",
              icon: "success"
            });
            axios.post(`/admin/products/restoreproduct/?pId=${pId}`).then((response) => {
              if (response.status == 200) {
                  const row = document.getElementById(pId);
                  if (row) {
                      row.parentNode.removeChild(row); 
                  }
              }
          });
          
          }
        });
    })
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.getElementById('logout-link').addEventListener('click', function(event) {
