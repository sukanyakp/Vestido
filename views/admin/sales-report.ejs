            window.location.href = '/admin/logout';
        }
    });
});
</script>

<!-- excel -->


<script>
  document.getElementById("download-excel").addEventListener("click", function () {
      // Get the table data
      const table = document.getElementById("p-table");
      const wb = XLSX.utils.table_to_book(table, { sheet: "Sheet1" });
  
      // Trigger the download
      XLSX.writeFile(wb, "orders_report.xlsx");
  });
  </script>

  <script>

document.addEventListener('DOMContentLoaded', function() {
  const dateElements = document.querySelectorAll('.delivered-date');

  dateElements.forEach(function(element) {
    const rawDate = element.getAttribute('data-date');
    const date = new Date(rawDate);
    
    // Options for the formatted date
    const options = { year: 'numeric', month: 'long', day: 'numeric' };
    const formattedDate = date.toLocaleDateString(undefined, options);
    
    // Set the formatted date as the element's text content
    element.textContent = formattedDate;
  });
});

  </script>
