<!-- table -->

<div class="col-lg-8 d-flex align-items-stretch main">
  <div class="card w-100">
    <div class="card-body p-4 ">
      <div class="button w-100 d-flex  justify-content-end">
        <!-- <a style="margin-right: 10px; width: 200px;" href="/admin/products/addcolors" class="btn btn-primary">Add Colors</a> -->
        <!-- <a style="width: 200px;" href="/admin/products/deletedcolors" class="btn btn-danger">Deleted Colors</a> -->
    </div>
      <h5 class="card-title fw-semibold mb-4" id="table">Orders</h5>
      <% if(orders){%>      
      <h6><p>Total Sales Count:<%=  orders.length%>  </p></h6>
      <% if( totalOrders){%>
        <h6> <p>  Total Order Count : <%= totalOrders.length  %></p></h6>

        <% } %>
      
      <%}else{%>
        <h6><p>Total Sales Count: 0  </p></h6>
        <%} %>
        <select id="report-type" name="reportType">
          <option value="reportType">reportType</option>
          <option value="daily" <%= reportType === 'daily' ? 'selected' : '' %>>Daily</option>
          <option value="weekly" <%= reportType === 'weekly' ? 'selected' : '' %>>Weekly</option>
          <option value="monthly" <%= reportType === 'monthly' ? 'selected' : '' %>>Monthly</option>
          <option value="yearly" <%= reportType === 'yearly' ? 'selected' : '' %>>Yearly</option>
        </select>
        
        
        <button id="pdf-button">Download PDF</button>

        <button id="download-excel">Download Excel</button>
      
        <div class="table-responsive" id="table">
          <table id="p-table" class="table text-nowrap mb-0 align-middle table-bordered" style="border:1px solid black; text-align:center">
            <thead class="text-dark fs-4">
              <tr>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Delivered Date</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Order Id</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Customer Name</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">State</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Payment Method</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Product Name</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Price</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Offer</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Offer Price</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Qty</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Total Price</h6></th>
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Coupon Discount</h6></th>

               
                <th class="border-bottom-0"><h6 class="fw-semibold mb-0">Total Price</h6></th>
              </tr>
            </thead>
            <tbody id="tbody">
              <% if (orders) { %>
                <% orders.forEach((order) => { %>
                 
                    <tr>
                      <td class="border-bottom-0">
                        <span class="delivered-date" data-date="<%= order.orderedItems.deliveredDate %>"></span>
                      </td>
                      
                      <td class="border-bottom-0"><%= order.orderId %></td>
                      <td class="border-bottom-0"><%= order.orderedItems.name %></td>
                      <td class="border-bottom-0"><%= order.shippingAddress[0].state %></td>
                      <td class="border-bottom-0"><%= order.orderedItems.paymentMethod %></td>
                      <td class="border-bottom-0"><%= order.orderedItems.productName %></td>
                      <td class="border-bottom-0"><%= order.orderedItems.variantDetails.price %></td>
                      <% if (order.orderedItems.productDetails.offerApplied) { %>
                        <td class="border-bottom-0"><%= order.orderedItems.productDetails.offer %>%</td>
                        <td class="border-bottom-0"><%= order.orderedItems.productDetails.offerPrice %></td>
                        <td class="border-bottom-0"><%= order.orderedItems.quantity %></td>
                        <td class="border-bottom-0"><%= (order.orderedItems.productDetails.offerPrice) * (order.orderedItems.quantity) %> </td>
                        <% if(order.couponApplied){%>
                          <td class="border-bottom-0"><%= ((order.orderedItems.productDetails.offerPrice)  - (order.orderedItems.price)) *( order.orderedItems.quantity ) %></td>  <!-- discount Amount-->
                          <td class="border-bottom-0"><%= (order.orderedItems.price) *  (order.orderedItems.quantity)  %></td> 

                          <% }else{%>
                            <td class="border-bottom-0"><%= (order.orderedItems.productDetails.offerPrice)  - (order.orderedItems.price) %></td>  <!-- discount Amount-->
                            <td class="border-bottom-0"><%= (order.orderedItems.price) *  (order.orderedItems.quantity) %></td> 
                            <% } %>
                       
                      <% } else { %>
                        <td class="border-bottom-0">0</td>
                        <td class="border-bottom-0"><%= order.orderedItems.variantDetails.price %></td>
                        <td class="border-bottom-0"><%= order.orderedItems.quantity %></td>
                        <td class="border-bottom-0"><%= (order.orderedItems.variantDetails.price) * (order.orderedItems.quantity) %></td>
                        <% if(order.couponApplied){%>
                          <td class="border-bottom-0"><%= ((order.orderedItems.variantDetails.price) * (order.orderedItems.quantity)) - (order.orderedItems.totalAmount) %></td>  <!-- discount Amount-->
                          <td class="border-bottom-0"><%= (order.orderedItems.totalAmount) %></td> 

                          <% }else {%>
                            <td class="border-bottom-0">0</td>  <!-- discount Amount-->
                            <td class="border-bottom-0"><%= (order.orderedItems.totalAmount)  %></td> 
                            <%} %>
                      <% } %>
                      <!-- <td class="border-bottom-0"><%= order.orderedItems.quantity %></td> -->
                      <!-- <% if (order.orderedItems.productDetails.offerApplied) { %>
                        <td class="border-bottom-0"><%= order.orderedItems.productDetails.offerPrice %></td>
                      <% } else { %>
                        <td class="border-bottom-0"><%= (order.orderedItems.variantDetails.price) * ( order.orderedItems.quantity)%></td>
                      <% } %> -->
                    </tr>
                  <% }) %>
               
              <% } %>
            </tbody>
          </table>
        </div>     
       
      <br>
        <div class="pagination-container"> 
          <ul class="pagination">
            <% 
              const queryParams = new URLSearchParams({
                reportType: reportType,  // Include the current reportType
                limit: limit              // Include the current limit
              }).toString();
            %>
        
            <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="/admin/salesreport?page=<%= currentPage - 1 %>&<%= queryParams %>">Previous</a>
              </li>
            <% } else { %>
              <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
              </li>
            <% } %>
        
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="/admin/salesreport?page=<%= i %>&<%= queryParams %>"><%= i %></a>
              </li>
            <% } %>
        
            <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="/admin/salesreport?page=<%= currentPage + 1 %>&<%= queryParams %>">Next</a>
              </li>
            <% } else { %>
              <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
              </li>
            <% } %>
          </ul>
        </div>
        
    </div>
  </div>
</div>



  
